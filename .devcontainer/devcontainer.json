{
    "name": "Africa Network Infrastructure Optimizer",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.autopep8",
                "ms-toolsai.jupyter",
                "ms-vscode.vscode-json",
                "bradlc.vscode-tailwindcss",
                "formulahendry.auto-rename-tag"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.linting.flake8Enabled": true,
                "python.formatting.provider": "autopep8",
                "editor.formatOnSave": true,
                "files.autoSave": "afterDelay"
            }
        }
    },

    "forwardPorts": [5000, 5001, 8000],
    "portsAttributes": {
        "5000": {
            "label": "Flask App",
            "onAutoForward": "notify"
        },
        "5001": {
            "label": "Flask API",
            "onAutoForward": "notify"
        },
        "8000": {
            "label": "Development Server",
            "onAutoForward": "notify"
        }
    },

    "postCreateCommand": "pip install --upgrade pip && pip install -r routing_optimizer/requirements.txt",
    
    "postStartCommand": "echo 'üåç Africa Network Infrastructure Optimizer - Ready for Development!' && echo 'Run: cd routing_optimizer && python run_app.py' && echo 'Then access the forwarded port to view your application'",

    "remoteUser": "vscode",
    
    "workspaceFolder": "/workspaces/africa-network-optimizer"
}
